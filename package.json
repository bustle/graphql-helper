{
  "name": "graphql-helper",
  "version": "0.1.1",
  "description": "A simple helper library for constructing GraphQL queries.",
  "main": "lib.js",
  "scripts": {
    "compile": "babel src.js --out-file lib.js",
    "flow": "flow",
    "test": "ava",
    "test:watch": "ava --watch",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bustlelabs/graphql-helper.git"
  },
  "keywords": [
    "graphql",
    "helper",
    "graphql-helper",
    "isomorphic"
  ],
  "author": "James Yu",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/bustlelabs/graphql-helper/issues"
  },
  "homepage": "https://github.com/bustlelabs/graphql-helper#readme",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-flow-comments": "^6.17.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "flow-bin": "^0.30.0",
    "isomorphic-fetch": "^2.2.1"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-flow-comments"
    ]
  }
}
